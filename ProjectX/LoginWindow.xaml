<Window x:Class="ProjectX.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng Nhập" Height="321" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#202025"
         Icon="/App.ico"
        ResizeMode="NoResize">
    <StackPanel Orientation="Vertical" Margin="10">
        <Label Content="Đăng Nhập" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" />

        <!-- Existing User Selection -->
        <Label Content="Chọn Tài Khoản:" FontWeight="Bold" Margin="30,0,30,10"/>
        <ComboBox x:Name="UserComboBox" Margin="30,0,30,10" Foreground="#d8d9de"/>

        <!-- Password Input -->
        <Label Content="Nhập Mật Khẩu:" FontWeight="Bold" Margin="30,0,30,0"/>
        <PasswordBox x:Name="PasswordBox" Margin="30,0,30,10" PasswordChar="*" />

        <!-- Login and Register Buttons -->
        <Button Content="Đăng nhập" Click="CheckLogin_Click" Background="#202123" Margin="30,0,30,10"/>
        <Button Content="Đăng Ký" Click="OpenRegisterForm_Click" Background="#202123" Margin="30,0,30,10"/>

        <!-- Additional Buttons -->
    </StackPanel>
</Window>
