<Window x:Class="ProjectX.Views.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đổi Mật Khẩu" Height="197" Width="238"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Background="White">
    <Grid Height="183" VerticalAlignment="Top">
        <StackPanel Margin="10" HorizontalAlignment="Center">
            <Label Content="Mật Khẩu Cũ:" FontWeight="Bold" Foreground="Black" Width="208"/>
            <PasswordBox x:Name="OldPasswordBox" Width="200" Margin="0,0,0,10" Foreground="Black" Background="#e8e8e8"/>

            <Label Content="Mật Khẩu Mới:" FontWeight="Bold" Foreground="Black" Width="198"/>
            <PasswordBox x:Name="NewPasswordBox" Width="200" Foreground="Black" Background="#e8e8e8"/>

            <Button Content="Đổi Mật Khẩu" Width="150" Height="30" Click="ChangePasswordButton_Click"
                    Background="#4285f4" Foreground="White" BorderBrush="White"
                    HorizontalAlignment="Center" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>