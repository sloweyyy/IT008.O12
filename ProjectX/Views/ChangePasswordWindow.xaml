<Window x:Class="ProjectX.Views.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đổi Mật Khẩu" Height="213" Width="238"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#202025">
    <Grid>
        <StackPanel Margin="10" HorizontalAlignment="Center">
            <Label Content="Mật Khẩu Cũ:" FontWeight="Bold" Foreground="White" Width="208"/>
            <PasswordBox x:Name="OldPasswordBox" Width="200" Margin="0,0,0,10" Foreground="White"/>

            <Label Content="Mật Khẩu Mới:" FontWeight="Bold" Foreground="White" Width="198"/>
            <PasswordBox x:Name="NewPasswordBox" Width="200" Foreground="White"/>

            <Button Content="Đổi Mật Khẩu" Width="150" Height="30" Click="ChangePasswordButton_Click"
                    Background="#202123" Foreground="White" BorderBrush="#34a853"
                    HorizontalAlignment="Center" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>